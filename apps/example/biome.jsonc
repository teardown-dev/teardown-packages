{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"root": false,
	"extends": "//",
	"files": {
		"includes": ["src/**/*", "app.config.ts", "!./styles/uniwind-types.d.ts"]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"useExhaustiveDependencies": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
