{
	"name": "@teardown/react-native",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"src/**/*"
	],
	"main": "./src/index.ts",
	"module": "./src/index.ts",
	"types": "./src/index.ts",
	"scripts": {
		"build": "tsc --project ./tsconfig.json",
		"dev": "bun run build && tsc --watch --project ./tsconfig.json",
		"typecheck": "tsc --noEmit --project ./tsconfig.json",
		"prepublishOnly": "bun run build",
		"nuke": "cd ../../ && bun run nuke"
	},
	"dependencies": {
		"@teardown/ingest-api": "0.0.21-alpha.14",
		"@teardown/types": "0.0.2",
		"eventemitter3": "^5.0.1",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@elysiajs/eden": "^1.4.5",
		"@teardown/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"@types/react": "*",
		"@types/uuid": "^11.0.0",
		"expo-updates": "^29.0.12"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"typescript": "*",
		"react-native-device-info": "^14.1.1",
		"expo-application": "^7.0",
		"expo-device": "^8.0",
		"zod": "^4"
	}
}
