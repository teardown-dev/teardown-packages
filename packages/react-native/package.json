{
	"name": "@teardown/react-native",
	"version": "2.0.0",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"src/**/*",
		"docs/**/*"
	],
	"main": "./src/exports/index.ts",
	"module": "./src/exports/index.ts",
	"types": "./src/exports/index.ts",
	"exports": {
		".": {
			"types": "./src/exports/index.ts",
			"import": "./src/exports/index.ts",
			"default": "./src/exports/index.ts"
		},
		"./expo": {
			"types": "./src/exports/expo.ts",
			"import": "./src/exports/expo.ts",
			"default": "./src/exports/expo.ts"
		},
		"./expo-notifications": {
			"types": "./src/exports/expo-notifications.ts",
			"import": "./src/exports/expo-notifications.ts",
			"default": "./src/exports/expo-notifications.ts"
		},
		"./firebase-messaging": {
			"types": "./src/exports/firebase-messaging.ts",
			"import": "./src/exports/firebase-messaging.ts",
			"default": "./src/exports/firebase-messaging.ts"
		},
		"./wix-notifications": {
			"types": "./src/exports/wix-notifications.ts",
			"import": "./src/exports/wix-notifications.ts",
			"default": "./src/exports/wix-notifications.ts"
		},
		"./mmkv": {
			"types": "./src/exports/mmkv.ts",
			"import": "./src/exports/mmkv.ts",
			"default": "./src/exports/mmkv.ts"
		}
	},
	"scripts": {
		"build": "tsc --project ./tsconfig.json",
		"dev": "bun run build && tsc --watch --project ./tsconfig.json",
		"typecheck": "tsc --noEmit --project ./tsconfig.json",
		"lint": "biome lint --write",
		"fmt": "biome format --write",
		"test": "bun test",
		"prepublishOnly": "bun run build",
		"nuke": "cd ../../ && bun run nuke"
	},
	"dependencies": {
		"@teardown/ingest-api": "catalog:teardown",
		"@teardown/schemas": "catalog:teardown",
		"@teardown/types": "catalog:teardown",
		"eventemitter3": "^5.0.1",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@elysiajs/eden": "^1.4.5",
		"@teardown/tsconfig": "workspace:*",
		"@types/bun": "latest",
		"@types/react": "*",
		"@types/uuid": "^11.0.0",
		"expo-updates": "^29.0.12"
	},
	"peerDependencies": {
		"react": "*",
		"react-native": "*",
		"typescript": "*",
		"expo-application": "^7.0",
		"expo-device": "^8.0",
		"expo-notifications": "^0.29",
		"@react-native-firebase/messaging": ">=18",
		"react-native-notifications": ">=5",
		"react-native-mmkv": "^3.0",
		"zod": "^4"
	},
	"peerDependenciesMeta": {
		"expo-application": {
			"optional": true
		},
		"expo-device": {
			"optional": true
		},
		"expo-notifications": {
			"optional": true
		},
		"@react-native-firebase/messaging": {
			"optional": true
		},
		"react-native-notifications": {
			"optional": true
		},
		"react-native-mmkv": {
			"optional": true
		}
	}
}
