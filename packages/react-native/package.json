{
	"name": "@teardown/react-native",
	"version": "2.0.25",
	"type": "module",
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"src/**/*",
		"docs/**/*"
	],
	"main": "./src/exports/index.ts",
	"module": "./src/exports/index.ts",
	"types": "./src/exports/index.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./src/exports/index.ts",
			"import": "./src/exports/index.ts",
			"default": "./src/exports/index.ts"
		},
		"./adapters/expo": {
			"types": "./src/exports/adapters/expo.ts",
			"import": "./src/exports/adapters/expo.ts",
			"default": "./src/exports/adapters/expo.ts"
		},
		"./adapters/mmkv": {
			"types": "./src/exports/adapters/mmkv.ts",
			"import": "./src/exports/adapters/mmkv.ts",
			"default": "./src/exports/adapters/mmkv.ts"
		},
		"./adapters/async-storage": {
			"types": "./src/exports/adapters/async-storage.ts",
			"import": "./src/exports/adapters/async-storage.ts",
			"default": "./src/exports/adapters/async-storage.ts"
		},
		"./adapters/device-info": {
			"types": "./src/exports/adapters/device-info.ts",
			"import": "./src/exports/adapters/device-info.ts",
			"default": "./src/exports/adapters/device-info.ts"
		},
		"./expo-notifications": {
			"types": "./src/exports/expo-notifications.ts",
			"import": "./src/exports/expo-notifications.ts",
			"default": "./src/exports/expo-notifications.ts"
		},
		"./firebase-messaging": {
			"types": "./src/exports/firebase-messaging.ts",
			"import": "./src/exports/firebase-messaging.ts",
			"default": "./src/exports/firebase-messaging.ts"
		},
		"./wix-notifications": {
			"types": "./src/exports/wix-notifications.ts",
			"import": "./src/exports/wix-notifications.ts",
			"default": "./src/exports/wix-notifications.ts"
		}
	},
	"scripts": {
		"build": "tsc --project ./tsconfig.json",
		"dev": "bun run build && tsc --watch --project ./tsconfig.json",
		"typecheck": "tsc --noEmit --project ./tsconfig.json",
		"lint": "bun x biome lint --write ./src",
		"fmt": "bun x biome format --write ./src",
		"check": "bun x biome check ./src",
		"test": "bun test",
		"prepublishOnly": "bun run build"
	},
	"dependencies": {
		"@teardown/ingest-api": "^0.1.49",
		"@teardown/schemas": "^0.1.49",
		"@teardown/types": "^0.1.49",
		"eventemitter3": "^5.0.1",
		"react-native-get-random-values": "^2.0.0",
		"uuid": "^13.0.0",
		"zod": "4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@elysiajs/eden": "1.4.5",
		"@react-native-firebase/messaging": "*",
		"@types/bun": "1.3.5",
		"@types/react": "19.2.7",
		"@types/uuid": "^11.0.0",
		"react-native-notifications": "*"
	},
	"peerDependencies": {
		"@react-native-async-storage/async-storage": "^1.21 || ^2.0",
		"expo-application": "~7",
		"expo-device": "~8",
		"expo-notifications": "~0.32",
		"expo-secure-store": "~15",
		"expo-updates": "~29",
		"@react-native-firebase/messaging": "*",
		"react": "~19",
		"react-native": "~0.81",
		"react-native-device-info": "~15",
		"react-native-mmkv": "^4",
		"react-native-notifications": "*",
		"typescript": "~5"
	},
	"peerDependenciesMeta": {
		"@react-native-async-storage/async-storage": {
			"optional": true
		},
		"react": {
			"optional": true
		},
		"react-native": {
			"optional": true
		},
		"react-native-device-info": {
			"optional": true
		},
		"react-native-mmkv": {
			"optional": true
		},
		"expo-application": {
			"optional": true
		},
		"expo-device": {
			"optional": true
		},
		"expo-notifications": {
			"optional": true
		},
		"expo-secure-store": {
			"optional": true
		},
		"expo-updates": {
			"optional": true
		},
		"@react-native-firebase/messaging": {
			"optional": true
		},
		"react-native-notifications": {
			"optional": true
		}
	}
}
