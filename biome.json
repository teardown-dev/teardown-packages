{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"noEmptyPattern": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useSelfClosingElements": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"ignore": ["**/package.json"],
		"include": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.md"
		]
	}
}
