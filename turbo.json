{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"check": {
			"dependsOn": ["^check"]
		},
		"build": {
			"outputs": ["dist/**"]
		},
		"typecheck": {
			"dependsOn": ["^typecheck"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"fmt": {
			"dependsOn": ["^fmt"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		}
	}
}
