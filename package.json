{
  "name": "teardown",
  "version": "1.2.16",
  "description": "",
  "private": true,
  "packageManager": "bun@1.1.33",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "fmt": "bunx @biomejs/biome format --write ./packages/**/*.ts ./apps/**/*.ts ./examples/**/*.ts",
    "lint": "bunx @biomejs/biome lint --write ./src",
    "bump-packages-version": "bun scripts/bump-packages-version.ts",
    "link-packages": "bun run ./scripts/link-packages.ts"
  },
  "workspaces": [
    "examples/*",
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "turbo": "^2.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "semver": "^7.5.4",
    "@types/semver": "^7.5.8"
  }
}
